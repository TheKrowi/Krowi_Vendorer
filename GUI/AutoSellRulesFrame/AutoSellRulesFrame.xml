            <Layer level="BACKGROUND">
                <Texture parentKey="Background" atlas="PetList-ButtonBackground">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="0"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString inherits="GameFontNormal" justifyH="LEFT" parentKey="Name">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeKey="$parent.Background" x="5" y="0"/>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeKey="$parent.Background" x="-5" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <HighlightTexture atlas="PetList-ButtonHighlight"/>
